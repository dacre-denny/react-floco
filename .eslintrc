{
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "extends": [
    "plugin:@typescript-eslint/recommended",
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module",
    "project": "./tsconfig.eslint.json"
  },
  "rules": {
    "react/prop-types": 0,
    "indent": 0,
    "@typescript-eslint/indent": ["error", 2]
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
